<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca_de"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="py.com.mcespedes.petagram.activity.AcercaDeActivity">

    <include
        android:id="@+id/miActionBar2"
        layout="@layout/actionbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:paddingLeft="60dp"
        >

        <ImageView
            android:id="@+id/ivContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miActionBar2"
            android:src="@drawable/mar"

            />

        <TextView
            android:text="@string/biografia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivContacto"
            android:layout_marginTop="31dp"
            android:id="@+id/bio"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif"
            android:typeface="normal"
            android:textSize="18sp"
            android:lineSpacingExtra="8sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

</RelativeLayout>
